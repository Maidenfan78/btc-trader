# btc-trader Environment Configuration
# Copy this file to .env and fill in your values.
# NEVER commit .env files with real secrets!

# ============================================================================
# Solana / Jupiter Configuration
# ============================================================================

# RPC URL (use a reliable provider like Helius, QuickNode, or Triton)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_RPC_BACKUP=https://api.mainnet-beta.solana.com

# Wallet secret key (base58 encoded)
# Generate with: solana-keygen new --no-bip39-passphrase
WALLET_SECRET_KEY=your_secret_key_here

# Token mints (Solana mainnet)
USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
CB_BTC_MINT=3NZ9JMVBmGAqocybic2c7LQCJScmgsAZ6vQqTDzcqmJh
WBTC_MINT=3NZ9JMVBmGAqocybic2c7LQCJScmgsAZ6vQqTDzcqmJh

# ============================================================================
# Trading Mode
# ============================================================================

# Paper mode (true = no real trades, false = live trading)
PAPER_MODE=true

# Enable live trading (only works when PAPER_MODE=false)
LIVE_TRADING_ENABLED=false

# ============================================================================
# MFI Indicator Settings (for MFI bots)
# ============================================================================

MFI_PERIOD=14
MFI_BUY_LEVEL=30
MFI_SELL_LEVEL=70

# ============================================================================
# ATR Settings (position management)
# ============================================================================

ATR_PERIOD=14
ATR_TP_MULT=1.0
ATR_TRAIL_MULT=2.5

# ============================================================================
# Position Management
# ============================================================================

# USDC amount per leg (each position has 2 legs: TP + Runner)
TRADE_LEG_USDC=100

# Max trades per day
MAX_TRADES_PER_DAY=1

# Minimum balances
MIN_BTC_BALANCE=0.001
MIN_USDC_RESERVE=50

# ============================================================================
# Execution Settings
# ============================================================================

# Slippage tolerance (basis points, 50 = 0.5%)
SLIPPAGE_BPS=50

# Max price impact (basis points, 100 = 1%)
MAX_PRICE_IMPACT_BPS=100

# ============================================================================
# Continuous Mode
# ============================================================================

# Enable continuous 24/7 monitoring
CONTINUOUS_MODE=true

# Minutes after candle close to wait before executing
EXECUTION_OFFSET_MINUTES=15

# Check interval when waiting
CHECK_INTERVAL_MINUTES=15

# ============================================================================
# Dashboard Configuration
# ============================================================================

DASHBOARD_PORT=3001

# JWT secret for authentication (generate a random string)
JWT_SECRET=change-me-to-a-random-string

# Admin credentials
ADMIN_USERNAME=admin

# Password hash (generate with: npx bcrypt-cli hash <password>)
ADMIN_PASSWORD_HASH=

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://192.168.68.52:5173

# ============================================================================
# Data Source
# ============================================================================

CANDLE_SOURCE=binance
BINANCE_SYMBOL=BTCUSDT

# Timezone (for logging)
TIMEZONE=UTC
